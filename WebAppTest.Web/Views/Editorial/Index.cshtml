@model IEnumerable<WebAppTest.Core.Entities.Editorial>
@{
    ViewData["Title"] = "Editorials Manager";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Editorials Manager</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Main</a></li>
                    <li class="breadcrumb-item active">Editorials</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header with-border">
                        <button id="btnAddEditorial" type="button" class="btn btn-primary" onclick="webapptest.editorials_manager.displayAddEditEditorial(0)">Add Editorial</button>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="tblEditorials" class="table table-bordered table-striped dt-responsive">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Country</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AddressEditorial)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>
                                            <button class="btn btn-default" onclick="webapptest.editorials_manager.displayAddEditEditorial(@item.Id)">Edit</button>
                                            <button class="btn btn-danger" onclick="webapptest.editorials_manager.displayDeleteEditorial(@item.Id)"> Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="modal fade" id="editorialFormModel" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-info">
                                        <h3 id="title" class="modal-title">Create Editorial</h3>
                                        <a href="#" class="close" data-dismiss="modal">×</a>
                                    </div>
                                    <div class="modal-body" id="editorialFormModelDiv">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="card-footer">
                        Footer
                    </div>
                    <!-- /.box-footer-->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>
</section>
<!-- /.content -->

@section Scripts {
    <script src="~/scripts/main/webapptest.editorials_manager.js"></script>

    <!-- page script -->
    <script>
        $(function () {
            webapptest.editorials_manager.displayListEditorials();
        })
    </script>
}