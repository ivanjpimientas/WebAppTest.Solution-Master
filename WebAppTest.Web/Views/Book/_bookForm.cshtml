@model WebAppTest.Core.Entities.Book
<div>
    <div class="row">
        <div class="col-md-12">
            <form id="bookForm">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Anio" class="control-label"></label>
                    <input asp-for="Anio" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PagesNumber" class="control-label"></label>
                    <input asp-for="PagesNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Author Book</label>
                    <input asp-for="Author.Name" class="form-control" />
                    <input type="hidden" asp-for="AuthorId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Editorial Book</label>
                    <input asp-for="Editorial.Name" class="form-control" />
                    <input type="hidden" asp-for="EditorialId" />
                </div>
                <div class="form-group">
                    <button type="button" id="btnSubmit" onclick="webapptest.books_manager.saveBookForm()" class="btn btn-block btn-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>