@model WebAppTest.Core.Entities.Student
<div>
    <div class="row">
        <div class="col-md-12">
            <form id="studentForm">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="NumDocument" class="control-label"></label>
                    <input asp-for="NumDocument" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label asp-for="Grade" class="control-label"></label>
                    <input asp-for="Grade" class="form-control" required/>
                </div>
                <div class="form-group">
                    <button type="button" id="btnSubmit" onclick="webapptest.students_manager.saveStudentForm()" class="btn btn-block btn-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>